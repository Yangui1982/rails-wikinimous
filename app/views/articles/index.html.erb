<div class='title'>
  <h1>Articles</h1>
</div>
<div class='articles'>
  <ul>
    <% @articles.each do |article| %>
      <li><%= link_to article.title, article_path(article) %>
          <%= link_to article_path(article),
              method: :delete,
              data: { confirm: "Are you sure?" } do%>
              <i class="fa-regular fa-trash-can"></i>
              <% end %></li>
    <% end %>
  </ul>
</div>
<div class='add'>
  <button class='btn btn-primary'><%= link_to new_article_path do%>
     <i class="fa-solid fa-plus"></i>
     Create a new article
     <% end %>
  </button>
</div>
